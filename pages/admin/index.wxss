/* 管理页面样式 */
.admin-container {
  padding: 20rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
}

.flight-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.flight-info {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.actions {
  display: flex;
  gap: 10rpx;
}

/* 编辑弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 90%;
  max-height: 90vh;
  background: #fff;
  border-radius: 12rpx;
  overflow: auto;
}

.modal-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
  font-weight: 500;
}

.modal-body {
  padding: 20rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  margin-bottom: 8rpx;
  color: #666;
}

input {
  width: 100%;
  height: 70rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 0 20rpx;
}

.codeshare-section {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.codeshare-item {
  display: flex;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.form-actions {
  margin-top: 30rpx;
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}
