/* 容器 */

.container {
  padding: 16rpx;
}

/* 顶部工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.left-tools {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.right-tools {
  flex-shrink: 0;
}

.lang-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
  background: #e6f7ff;
  color: #1890ff;
  border: none;
  line-height: 1;
}

.update-time {
  font-size: 24rpx;
  color: #999;
}

.filter-toggle {
  font-size: 24rpx;
  color: #1890ff;
  padding: 8rpx 0;
}

/* 筛选面板 */
.filter-panel {
  background: #fff;
  border-radius: var(--border-radius);
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: var(--card-shadow);
  display: none;
}

.filter-panel.visible {
  display: block;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.filter-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.filter-clear {
  font-size: 24rpx;
  color: #1890ff;
}

.filters {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.filter-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f5f5f5;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
}

.filter-item.active {
  background: #e6f7ff;
}

.filter-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.filter-label {
  font-size: 24rpx;
  color: #666;
}

.filter-value {
  font-size: 28rpx;
  color: #333;
}

.filter-arrow {
  font-size: 24rpx;
  color: #999;
}
.tabs {
  display: flex;
  background: #fff;
  padding: 12rpx 0;
  border-radius: var(--border-radius);
  margin-bottom: 16rpx;
  box-shadow: var(--card-shadow);
  overflow-x: auto;
  white-space: nowrap;
}


.tab-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 18rpx;
  position: relative;
  min-width: fit-content;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: var(--primary-color);
  border-radius: 2rpx;
}

/* 航班卡片 */

.flight-card {
  background: #fff;
  border-radius: var(--border-radius);
  padding: 24rpx 20rpx;
  margin-bottom: 16rpx;
  box-shadow: var(--card-shadow);
}

/* 卡片主体 */
.card-main {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.left-section {
  display: flex;
  gap: 16rpx;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.airline-logo {
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  flex-shrink: 0;
}

.flight-basic-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
  min-width: 0;
}

.flight-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.flight-no {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  white-space: nowrap;
}

.airline-name {
  font-size: 28rpx;
  color: #666;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.aircraft {
  font-size: 24rpx;
  color: #999;
}

/* 航空联盟标识 */
.alliance-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 4rpx 12rpx;
  background: #f8f8f8;
  border-radius: 100rpx;
  flex-shrink: 0;
  border: 1rpx solid #f0f0f0;
}

.alliance-logo {
  width: 24rpx;
  height: 24rpx;
}

.alliance-name {
  font-size: 22rpx;
  color: #666;
  white-space: nowrap;
}

/* 卡片主体内容 */
.card-body {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.destination-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.airport-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.city {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.iata {
  font-size: 24rpx;
  color: #666;
}

.country {
  font-size: 24rpx;
  color: #999;
}

.schedule-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.time-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.time {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.days {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
}

.status {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
}

.status.active {
  color: #52c41a;
  background: #f6ffed;
}

/* 代码共享航班部分 */
.codeshare-section {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.codeshare-header {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.codeshare-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.codeshare-item {
  background: #f8f8f8;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
}

.codeshare-main {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.codeshare-logo {
  width: 40rpx;
  height: 40rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.codeshare-info {
  flex: 1;
  min-width: 0;
}

.codeshare-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.codeshare-no {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
}

.codeshare-airline {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 代码共享航班的联盟标识使用小一号的样式 */
.alliance-badge.small {
  padding: 2rpx 8rpx;
}

.alliance-badge.small .alliance-logo {
  width: 20rpx;
  height: 20rpx;
}

.alliance-badge.small .alliance-name {
  font-size: 20rpx;
}



/* 空态 */

.empty-state {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 32rpx 0;
}
